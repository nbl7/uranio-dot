{
	"compilerOptions": {
		"alwaysStrict": true,
		"allowJs": true,
		"baseUrl": ".",
		"declaration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"rootDir": "./",
		"paths": {
			"uranio": ["./lib"],
			"uranio-core": ["./lib/api/core"],
			"uranio-core/*": ["./lib/api/core/*"],
			"uranio-api": ["./lib/api"],
			"uranio-api/*": ["./lib/api/*"],
			"uranio-books": ["./books"],
			"uranio-books/*": ["./books/*"]
		},
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"target": "ES2018"
	},
	"include": [
	"./src/**/*",
	],
	"exclude": [
	]
}
