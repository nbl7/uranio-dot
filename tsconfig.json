{
	"compilerOptions": {
		"alwaysStrict": true,
		"allowJs": true,
		"baseUrl": ".",
		"declaration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [ "es2015" ],
		"module": "commonjs",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"rootDir": "./",
		"paths": {
			"urn_books": [".uranio/books"],
			"urn_core": [".uranio/lib/core"],
			"urn_core/*": [".uranio/lib/core/*"],
			"uranio": [".uranio/lib/"]
		},
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"target": "es6"
	},
	"include": [
		"src/**/*",
		".uranio/**/*"
	],
	"exclude": [
		"dist/**/*"
	]
}
